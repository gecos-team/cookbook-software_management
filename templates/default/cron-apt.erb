#
# Regular cron jobs for the cron-apt package
#
# Every night at 4 o'clock.
#0 4	* * *	root	test -x /usr/sbin/cron-apt && /usr/sbin/cron-apt
# Every hour.
# 0 *	* * *	root	test -x /usr/sbin/cron-apt && /usr/sbin/cron-apt /etc/cron-apt/config2
# Every five minutes.

<%= @mon_time %> * * 1   root    test -x /usr/sbin/cron-apt && /usr/sbin/cron-apt /etc/cron-apt/config
<%= @tue_time %> * * 2   root    test -x /usr/sbin/cron-apt && /usr/sbin/cron-apt /etc/cron-apt/config
<%= @wed_time %> * * 3   root    test -x /usr/sbin/cron-apt && /usr/sbin/cron-apt /etc/cron-apt/config
<%= @thu_time %> * * 4   root    test -x /usr/sbin/cron-apt && /usr/sbin/cron-apt /etc/cron-apt/config
<%= @fri_time %> * * 5   root    test -x /usr/sbin/cron-apt && /usr/sbin/cron-apt /etc/cron-apt/config
<%= @sat_time %> * * 6   root    test -x /usr/sbin/cron-apt && /usr/sbin/cron-apt /etc/cron-apt/config
<%= @sun_time %> * * 7   root    test -x /usr/sbin/cron-apt && /usr/sbin/cron-apt /etc/cron-apt/config
